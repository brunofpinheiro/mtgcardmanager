<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_have">

    <TableRow
        android:id="@+id/tableRowHeader"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:showDividers="middle|beginning|end">

        <TextView
            android:id="@+id/tvHeaderName"
            android:text="@string/header_name"
            android:layout_weight="1"
            android:background="#dcdcdc"
            android:textColor="#000000"
            android:padding="20dip"
            android:gravity="left"
            android:layout_span="2"
            android:textStyle="bold"
            android:outlineProvider="bounds" />

        <TextView
            android:id="@+id/tvHeaderQtde"
            android:text="@string/header_qty"
            android:layout_weight="1"
            android:background="#dcdcdc"
            android:textColor="#000000"
            android:padding="20dip"
            android:gravity="center"
            android:textStyle="bold" />

    </TableRow>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view_have"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/no_cards_message"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/no_cards"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:gravity="center"
        android:visibility="invisible" />

</TableLayout>