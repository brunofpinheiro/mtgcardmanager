<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    android:layout_weight="1" >

    <RelativeLayout xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/relativeLayoutID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.br.mtgcardmanager.View.MainActivity">

        <ImageView
            android:id="@+id/ivCardImageID"
            android:layout_width="300dp"
            android:layout_height="350dp"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/cardNameID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ivCardImageID"
            android:gravity="center_horizontal"
            android:textStyle="bold"
            android:textColor="@android:color/black" />

        <Button
            android:id="@+id/btn_tenho"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_have_add"
            android:layout_below="@+id/cardNameID"
            android:layout_toLeftOf="@+id/dummy"
            android:textColor="@color/black"
            android:drawableLeft="@drawable/ic_add_green_24dp"
            android:visibility="invisible" />

        <View
            android:id="@+id/dummy"
            android:visibility="visible"
            android:layout_height="0dip"
            android:layout_width="1dip"
            android:layout_below="@+id/cardNameID"
            android:layout_centerHorizontal="true"/>

        <Button
            android:id="@+id/btn_quero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_want_add"
            android:layout_below="@+id/cardNameID"
            android:layout_toRightOf="@id/dummy"
            android:textColor="@color/black"
            android:drawableLeft="@drawable/ic_add_green_24dp"
            android:visibility="invisible"/>

        <TableLayout
            android:id="@+id/tableLayoutID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_tenho"
            android:layout_centerHorizontal="true"
            android:padding="15dip"
            android:isScrollContainer="true"/>

    </RelativeLayout>
</ScrollView>